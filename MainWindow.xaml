<Window x:Class="AverageLyrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="405" Width="684" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="ArtistName" HorizontalAlignment="Left" Height="30" Margin="80,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="112" GotFocus="ArtistName_GotFocus"/>
        <Button x:Name="ArtistSearchButton" Content="Search Artists" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Margin="209,31,0,0" Height="30" Click="ArtistSearchButton_Click"/>
        <DataGrid x:Name="ArtistDataGrid" HorizontalAlignment="Left" Height="175" Margin="80,98,0,0" VerticalAlignment="Top" Width="385" IsReadOnly="True" AutoGenerateColumns="False" 
                  SelectionChanged="ArtistDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ArtistNameColumn" Binding="{Binding Path=Name}" Header="Artist Name" Width="*" MinWidth="150"/>
                <DataGridTextColumn x:Name="ArtistTypeColumn" Binding="{Binding Path=Type}" Header="Artist Type"/>
                <DataGridTextColumn x:Name="ArtistCountryColumn" Binding="{Binding Path=Type}" Header="Country"/>
                <DataGridTextColumn x:Name="SearchScoreColumn" Binding="{Binding Path=Type}" Header="Search Score"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="SongSearchButton" Content="Search Songs" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Margin="492,96,0,0" Height="30" Click="SongSearchButton_Click"/>

    </Grid>
</Window>
